{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<nav class="col-md-3 col-lg-2 d-none d-md-flex flex-column bg-dark sidebar min-vh-100 p-4">
				<div class="position-sticky">
					<h1 class="text-white">Dashboard</h1>
					<ul class="nav flex-column">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('admin_media_index') }}">
								Medias
							</a>
						</li>
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin_album_index') }}">
									Albums
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin_guest_index') }}">
									Invités
								</a>
							</li>
						{% endif %}
					</ul>
				</div>
				<a class="mt-auto text-white btn btn-primary mb-5" href="{{ path('home') }}">
					Retour à la page accueil
				</a>
			</nav>
			<main class="col-md-9 ms-sm-auto col-lg-10 p-4">
				{% for label, messages in app.flashes %}
						{% for message in messages %}
							<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
								{{ message }}
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
							</div>
						{% endfor %}
				{% endfor %}
				{% block admin %}
				{% endblock %}
			</main>
		</div>
	</div>
{% endblock %}
