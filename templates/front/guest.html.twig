{% extends 'front.html.twig' %}

{% block front %}
	<div class="row">
		<div class="col-12">
			<h3 class="mb-4">{{ guest.name }}</h3>
			<p class="mb-5 w-100">{{ guest.description }}</p>
			<div class="row">
				{% for media in guest.medias %}
					{% set isFirst = loop.first %}
					<div class="col-4 media mb-4">
						<picture>
							<source srcset="{{ media.path|imagine_filter('thumb_400_webp') }}" type="image/webp">
							<img class="w-100" src="{{ asset(media.path) }}" alt="{{ media.title }}" 
							loading="{{ isFirst ? 'eager' : 'lazy' }}" 
							fetchpriority="{{ isFirst ? 'high' : 'auto' }}" decoding="async"
							width="400" height="400">
						</picture>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
	{% set totalPages = (total / limit)|round(0, 'ceil') %}
	<nav aria-label="Page navigation">
	<ul class="pagination justify-content-center my-pagination">
		{% if page > 1 %}
			<li class="page-item">
				<a class="page-link text-dark border-0 bg-transparent fst-italic" href="{{ path('guests', {page: 1}) }}">Première page</a>
			</li>
			<li class="page-item">
				<a class="page-link text-dark border-0 bg-transparent fst-italic" href="{{ path('guests', {page: page - 1}) }}">Précédent</a>
			</li>
		{% endif %}

		{% for i in range(max(1, page - 3), min(totalPages, page + 3)) %}
			<li class="page-item {% if i == page %}active{% endif %}">
				<a class="page-link text-dark border-0 bg-transparent fst-italic" href="{{ path('guests', {page: i}) }}">{{ i }}</a>
			</li>
		{% endfor %}

		{% if page < totalPages %}
			<li class="page-item">
				<a class="page-link text-dark border-0 bg-transparent fst-italic" href="{{ path('guests', {page: page + 1}) }}">Suivant</a>
			</li>
			<li class="page-item">
				<a class="page-link text-dark border-0 bg-transparent fst-italic" href="{{ path('guests', {page: totalPages}) }}">Dernière page</a>
			</li>
		{% endif %}
	</ul>
</nav>
{% endblock %}
